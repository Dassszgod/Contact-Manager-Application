@model IEnumerable<ContactManagerApp.Models.User>

@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta content="charset=utf-8" />
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width" />
    <title>Contact Manager App</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Outfit:wght@100..900&display=swap" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            background-color: #20232A;
            font-family: "DM Sans", sans-serif;
        }

        .app {
            display: flex;
            flex-direction: column;
            height: 100vh;
            width: 100%;
        }

        .title {
            margin-top: 350px;
            margin-left: auto;
            margin-right: auto;
            color: #7FCFFF;
            font-size: 72px;
            font-weight: bold;
            text-shadow: 0 0 12px #7FCFFF, 0 0 17px #1B75D0, 0 0 20px #1B75D0;
        }

        .uploadBut {
            margin-left: auto;
            margin-right: auto;
            margin-top: 50px;
            width: 150px;
            height: 50px;
            color: #1B1B1B;
            background-color: #7FCFFF;
            border-radius: 20px;
            font-size: 20px;
            font-weight: bold;
            border: 0px;
            transition: transform ease-in-out 0.4s;
        }

            .uploadBut:hover {
                transform: scale(1.1);
            }

            .uploadBut:active {
                transition: 0s;
                background-color: #1B1B1B;
                color: #7FCFFF;
            }

        .uploadCont {
            width: 700px;
            height: 700px;
            margin-left: auto;
            margin-right: auto;
            display: flex;
            flex-direction: column;
        }

        .input {
            margin-left: auto;
            margin-right: auto;
            margin-top: 30px;
            display: inline-block;
            padding: 10px 20px;
            background-color: #7FCFFF;
            border-radius: 5px;
            cursor: pointer;
            color: #1B1B1B;
        }

        .tableContainer {
            width: 100%;
            margin-top: 376px;
        }

        .filterBox {
            display: flex;
            justify-content: center;
            margin-bottom: 15px;
        }

        .filterInput {
            width: 300px;
            padding: 10px;
            border-radius: 8px;
            border: none;
            font-size: 16px;
            outline: none;
            background-color: #2C2F38;
            color: #7FCFFF;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            cursor: default;
        }

        th, td {
            color: #7FCFFF;
            border: 1px solid #7FCFFF;
            padding: 8px;
            text-align: left;
        }

        th {
            cursor: pointer;
            user-select: none;
        }

            th:hover {
                background-color: #2C2F38;
            }
    </style>
</head>
<body>
    <div class='app'>
        <div class="uploadCont">
            <div class="title">Upload your csv file</div>
            <form asp-action="UploadCsv" method="post" enctype="multipart/form-data" style="display: flex; flex-direction: column;">
                <input type="file" name="csv" class="input" />
                <button type="submit" class="uploadBut">Upload</button>
            </form>
        </div>

        <footer class='tableContainer'>
            <div class="filterBox">
                <input type="text" id="filterInput" class="filterInput" placeholder="Search..." onkeyup="filterTable()" />
            </div>

            <table id="userTable">
                <thead>
                    <tr>
                        <th onclick="sortTable(0)">Name</th>
                        <th onclick="sortTable(1)">Date of birth</th>
                        <th onclick="sortTable(2)">Married</th>
                        <th onclick="sortTable(3)">Phone</th>
                        <th onclick="sortTable(4)">Salary</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.DateOfBirth</td>
                            <td>@user.Married</td>
                            <td>@user.Phone</td>
                            <td>@user.Salary</td>
                            <td>
                                <form asp-action="Edit" asp-route-id="@user.Id" method="get" style="display:inline;">
                                    <button type="submit" class="btn btn-success">Edit</button>
                                </form>
                            </td>
                            <td>
                                <form asp-action="DeleteConfirmed" asp-route-id="@user.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger"
                                            onclick="return confirm('Are you sure you want to delete this user?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </footer>
    </div>

    <script>
        function filterTable() {
            let input = document.getElementById("filterInput");
            let filter = input.value.toLowerCase();
            let table = document.getElementById("userTable");
            let tr = table.getElementsByTagName("tr");

            for (let i = 1; i < tr.length; i++) {
                let tdArr = tr[i].getElementsByTagName("td");
                let show = false;
                for (let j = 0; j < tdArr.length - 2; j++) {
                    if (tdArr[j] && tdArr[j].innerText.toLowerCase().indexOf(filter) > -1) {
                        show = true;
                        break;
                    }
                }
                tr[i].style.display = show ? "" : "none";
            }
        }

        let sortDir = {};
        function sortTable(n) {
            let table = document.getElementById("userTable");
            let rows = Array.from(table.rows).slice(1);
            let dir = sortDir[n] === "asc" ? "desc" : "asc";

            rows.sort((a, b) => {
                let x = a.cells[n].innerText.toLowerCase();
                let y = b.cells[n].innerText.toLowerCase();

                if (!isNaN(x) && !isNaN(y)) {
                    x = parseFloat(x);
                    y = parseFloat(y);
                }

                if (x < y) return dir === "asc" ? -1 : 1;
                if (x > y) return dir === "asc" ? 1 : -1;
                return 0;
            });

            rows.forEach(row => table.tBodies[0].appendChild(row));
            sortDir[n] = dir;
        }
    </script>
</body>
</html>
